<img style=@GetImgStyle() class=@Class src=@Url />

@functions {
    [Parameter]
    string Url { get; set; }

    [Parameter]
    string Class { get; set; }

    [Parameter]
    string Height { get; set; }

    private string GetImgStyle()
    {
        if (string.IsNullOrWhiteSpace(Height))
        {
            return "";
        }
        return $"height: {Height}";
    }
}